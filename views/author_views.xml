<odoo>
    <!-- FORM VIEW -->
    <record id="view_form_author" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string=" Author Form">
                <sheet>
                    <group>
                        <field name="name" string="or Name"/>
                        <field name="email" string=" Email"/>
                    </group>
                            
                    <notebook>
                        <page string=" Books by Author">
                            <field name="book_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_list_author" model="ir.ui.view">
        <field name="name">library.author.list</field>
        <field name="model">library.author</field>   
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string=" Authors List">
                <field name="name" string=" Name"/>
                <field name="email" string=" email"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_authors" model="ir.actions.act_window">
        <field name="name"> Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field>
    </record>

   
</odoo>
